<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlidingPanel" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/SlidingWindowAnimationTransition</item>
<!--        <item name="android:windowEnterTransition">@transition/slide_from_bottom</item>-->
<!--        <item name="android:windowExitTransition">@transition/slide_to_bottom</item>-->
    </style>

    <style name="SlidingWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/slide_in_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_out_anim</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>